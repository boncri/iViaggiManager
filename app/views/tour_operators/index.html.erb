<%- model_class = TourOperator -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div class="container">
  <div class="row">
    <div class="span5">

      <table class="table table-striped">
        <thead>
        <tr>
          <th>&nbsp;</th>
          <th><%= model_class.human_attribute_name(:id) %></th>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th><%= model_class.human_attribute_name(:url) %></th>
          <th><%= t '.actions', :default => t("helpers.actions") %></th>
        </tr>
        </thead>
        <tbody>
        <% @tour_operators.each do |tour_operator| %>
            <tr>

              <td><%= image_tag tour_operator.icon.url(:small) %></td>
              <td><%= link_to tour_operator.id, tour_operator_path(tour_operator) %></td>
              <td><%= link_to tour_operator.name, tour_operator_catalogs_path(tour_operator), remote: true %></td>
              <td><%= tour_operator.url %></td>
              <td>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_tour_operator_path(tour_operator), :class => 'btn btn-mini' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            tour_operator_path(tour_operator),
                            :method => :delete,
                            :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                            :class => 'btn btn-mini btn-danger' %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <%= link_to t('.new', :default => t("helpers.links.new")),
                  new_tour_operator_path,
                  :class => 'btn btn-primary' %>

    </div>
    <div class="span5">
      <div id="catalogs"></div>
    </div>
  </div>
</div>